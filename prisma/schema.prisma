generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Tabela Usuario
model User {
  id Int @id @default(autoincrement())
  avatar String?
  name String
  email String @unique
  password String
  role Role @default(user)
  workingHours Json?

  tickets Ticket[] @relation("UserTickets") // tickets criados pelo usuário
  assigned Ticket[] @relation("TechTickets") // tickets atribuídos como técnico

  createdAt DateTime @default(now())
}

enum Role {
  admin
  user
  technician
}

// Tabela Chamados
model Ticket {
  id Int @id @default(autoincrement())
  publicID String @unique

  title String
  description String
  status Status @default(open)

  serviceID Int
  service Service @relation("ServiceTickets",fields: [serviceID], references: [id])

  subService SubService[] @relation("SubServiceTicketsOnTicket")

  userID Int
  user User @relation("UserTickets",fields: [userID], references: [id])

  technicianID Int?
  technician User? @relation("TechTickets", fields: [technicianID], references: [id])

  createdAt DateTime @updatedAt
  updatedAt DateTime @default(now())
}

enum Status {
  open
  finished
  inProgress
}

// Tabela Servicos
model Service {
  id Int @id @default(autoincrement())
  title String @unique
  value Float
  status Boolean @default(true)

  tickets Ticket[] @relation("ServiceTickets")
}

// Tabela de Servicos Adicionais
model SubService {
  id Int @id @default(autoincrement())
  title String @unique
  value Float

  tickets Ticket[] @relation("SubServiceTicketsOnTicket")
}
